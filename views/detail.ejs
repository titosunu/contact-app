<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
            <% if (!contact) { %>
                <div class="alert alert-danger mt-4" role="alert">
                    Contact Not Found <a href="/contact" class="alert-link">Back to Contact</a>
                </div>
            <% } else { %>
            <div class="card mt-4 text-bg-success" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= contact.name %></h5>
                    <h6 class="card-subtitle mb-2"><%= contact.nohp %></h6>
                    <p class="card-text"><%= contact.email %></p>
                    <a href="/contact" class="badge text-bg-primary">Back to list Contact</a>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>