<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>Contact List</h2>
            <table class="table mt-4">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">ðŸš€</th>
                        <th scope="col">Name</th>
                        <th scope="col">Mobile</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody class="table-dark">
                <% if (contacts.length === 0) { %>
                    <tr>
                        <td colspan="4">
                            <div class="alert alert-danger mt-4" role="alert">
                                Contact Not Found
                            </div>
                        </td>
                    </tr>
                <% } %>
                    <% contacts.forEach((contact, i) => {i++ %>
                        <tr>
                            <th scope="row"><%= i++ %></th>
                            <td><%= contact.name %></td>
                            <td><%= contact.nohp %></td>
                            <td>
                                <a href="/contact/<%= contact.name %>" class="btn btn-success badge">Detail <i class="bi bi-eye"></i></a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>